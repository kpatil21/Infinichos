<a href="/dashboard">&larr; Go Back</a>
<div class="admin-title">
    <h2>View / Update Blog.</h2>

   <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">   
    <input type="submit" value="Delete" class="btn-delete btn">
   </form>

</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="post">
    <label for="title"><b>Title</b></label>
    <input type="text" placeholder="Enter Blog Title" name="title" value="<%= data.title %>">

    <label for="body"><b>Content</b></label>
    <textarea name="body" cols="80" rows="10"><%= data.body %></textarea>

    <label for="post-image"><b>Upload Image:</b></label>
    <input type="file" name="image" id="image" accept="image/*">

    <input type="submit" value="Update Blog" class="btn">
</form>